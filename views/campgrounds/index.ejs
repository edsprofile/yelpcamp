<%- include("../partials/header.ejs"); %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="campgrounds/new">Add a new campground!</a>
            </p>
        </div>       
    </header>

    <div class="row text-center">
        <div class="col-lg-12">
            <h3>Most popular campgrounds!</h3>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card">
                    <img class="card-img-top" alt="campground" src="<%= campground.image %>" />
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.name %>
                        </h5>
                        <p>
                            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include("../partials/footer.ejs"); %>

