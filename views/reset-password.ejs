<%- include("./partials/header"); %>

<div class="row">
    <div class="col-md-12 text-center">
        <h1>Forgot Password</h1>
    </div>
    <div class="col-md-12 text-center">
        <form action="/reset-password" method="post">
            <div class="form-group col-sm-4 mx-auto text-left">
                <label for="email">Enter email for password reset</label>
                <input class="form-control" name="email" type="email" placeholder="email" />
            </div>
            <div class="form-group col-sm-4 mx-auto">
                <button class="btn btn-lg btn-primary btn-block ">Submit</button>
            </div>
            <div class="form-group col-sm-4 container text-left">
                <a href="/campground">Go Back</a>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer"); %>
