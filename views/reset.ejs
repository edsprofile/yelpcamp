<%- include("./partials/header"); %>

<div class="row">
    <div class="col-md-12 text-center">
        <h1>New Password</h1>
    </div>
    <div class="col-md-12 text-center">
        <form action="/reset/<%= token %>" method="post">
            <div class="form-group col-sm-4 mx-auto text-left">
                <label for="email">New password</label>
                <input class="form-control" name="password" type="password" placeholder="password" />
            </div>
            <div class="form-group col-sm-4 mx-auto text-left">
                <label for="email">Confirm password</label>
                <input class="form-control" name="confirm" type="password" placeholder="confirm password" />
            </div>
            <div class="form-group col-sm-4 mx-auto">
                <button class="btn btn-lg btn-primary btn-block ">Update password</button>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer"); %>
